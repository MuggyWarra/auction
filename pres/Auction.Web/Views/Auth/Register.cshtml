@model Akk
@{
    ViewData["Title"] = "Регистрация";
}
<h1>Регистрация</h1>
<form asp-action="Register" asp-controller="Auth">
    <label>Никнейм:</label>
    <input type="text" name="name" />
    <br />
    <label>Логин:</label>
    <input type="text" name="login" />
    <br />
    <label>Пароль:</label>
    <input type="password" name="password" />
    <br />
    <input type="submit" value="Сохранить" />
</form>