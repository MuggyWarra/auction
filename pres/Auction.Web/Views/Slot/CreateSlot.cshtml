@model Auction.Slot

@{
    ViewData["Title"] = "CreateSlot";
}

<h1>Создать слот</h1>

<h4>Слот</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSlot">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Название</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tegs" class="control-label">Добавте тег</label>
                <input asp-for="Tegs" class="form-control" />
                <span asp-validation-for="Tegs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinBet" class="control-label">Минимальная Ставка</label>
                <input asp-for="MinBet" class="form-control" />
                <span asp-validation-for="MinBet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InitialPrice" class="control-label">Начальная цена</label>
                <input asp-for="InitialPrice" class="form-control" />
                <span asp-validation-for="InitialPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание слота</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться обратно</a>
</div>

